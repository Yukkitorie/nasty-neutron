---
<div class="title">
  <h3>TOKEN CONTRACT ADDRESS</h3>
</div>
<div class="copy-container">
  <div class="copy-wrapper">
    <div class="copy-text" id="copyText">
      EQAnoo--1OLmDk1NUdTX2NokJbwdxrS4R1lGk9FRdUCOYnd6
    </div>
    <button
      id="copyButton"
      class="copy-button"
      aria-label="Copy Text"
    >
      <svg id="copyIcon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <rect width="14" height="14" x="8" y="8" rx="2" ry="2"/><path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/>
      </svg>
      <svg id="checkIcon" class="hidden" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M18 6 7 17l-5-5"/><path d="m22 10-7.5 7.5L13 16"/>
      </svg>
    </button>
  </div>
</div>

<script>
  const copyButton = document.getElementById('copyButton');
  const copyText = document.getElementById('copyText');
  const copyIcon = document.getElementById('copyIcon');
  const checkIcon = document.getElementById('checkIcon');

  if (copyButton && copyText && copyIcon && checkIcon) {
    copyButton.addEventListener('click', async () => {
      try {
        await navigator.clipboard.writeText(copyText.textContent?.trim() || '');
        
        copyIcon.classList.add('hidden');
        checkIcon.classList.remove('hidden');
        checkIcon.style.color = '#22c55e';

        setTimeout(() => {
          copyIcon.classList.remove('hidden');
          checkIcon.classList.add('hidden');
        }, 2000);
      } catch (err) {
        console.error('Failed to copy text: ', err);
      }
    });
  }
</script>

<style scoped>
  .title{
    padding-top: 10px;
  }
  .copy-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 1rem;
  }

  .copy-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: #111725;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    padding: 1rem;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
    transition: box-shadow 0.3s ease;
  }

  .copy-wrapper:hover {
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .copy-text {
    word-break: break-all;
    padding-right: 1rem;
    font-family: system-ui, -apple-system, sans-serif;
    font-size: 0.875rem;
    color: whitesmoke;
  }

  .copy-button {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
    background: none;
    border: none;
    color: whitesmoke;
    cursor: pointer;
    transition: color 0.2s ease;
  }

  .copy-button:hover {
    color: #374151;
  }

  .copy-button:focus {
    outline: none;
    color: #374151;
  }

  .copy-button svg {
    width: 20px;
    height: 20px;
  }

  .hidden {
    display: none;
  }

  @media (max-width: 640px) {
    .copy-container {
      padding: 0.5rem;
    }
    
    .copy-wrapper {
      padding: 0.75rem;
    }
    
    .copy-text {
      font-size: 0.75rem;
    }
    
    .copy-button {
      padding: 0.375rem;
    }
    
    .copy-button svg {
      width: 16px;
      height: 16px;
    }
  }
</style>