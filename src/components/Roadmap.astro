---
import { Image } from "astro:assets";
import Circle1 from '../assets/icons/circle_1.svg';

const roadmapData = [
    {
        stage: "Stage 1: Community Formation",
        details: [
            "Create TONY meme culture",
            "1,000 holders",
            "2,000 subscribers on @stark_invest",
            "Launch the full website upon reaching a $1M market cap"
        ]
    },
    {
        stage: "Stage 2: Market Growth",
        details: [
            "Achieve a $2M market cap",
            "10,000 holders",
            "15,000 subscribers on @stark_invest",
            "Begin preparations for bot development",
            "Increase token liquidity"
        ]
    },
    {
        stage: "Stage 3: Exchange Launch",
        details: [
            "Achieve a $10M market cap",
            "20,000 holders",
            "30,000 subscribers on @stark_invest",
            "Listing on a centralized exchange",
            "Start developing the bot"
        ]
    },
    {
        stage: "Stage 4: Staking Beta",
        details: [
            "Achieve a $25M market cap",
            "40,000 holders",
            "50,000 subscribers on @stark_invest",
            "Beta launch of staking"
        ]
    },
    {
        stage: "Stage 5: Full Launch",
        details: [
            "Achieve a $50M market cap",
            "60,000 holders",
            "100,000 subscribers on @stark_invest",
            "Full bot release: begin staking"
        ]
    }
];
---

<section id="roadmap"></section>
<div class="title">
    <h1>Road Map</h1>
</div>
<div class="container">
    {roadmapData.map((stage) => (
        <div class="card">
            <Image src={Circle1} alt="" class="img"/>

            <div class="content">
                <h3 class="title">{stage.stage}</h3>
                <div class="details">
                    {stage.details.map(detail => (
                        <p class="text">{detail}</p>
                    ))}
                </div>
            </div>
        </div>
    ))}
</div>

<style scoped>
    .container {
        display: flex;
        flex-wrap: wrap;
        gap: 65px;
        padding: 20px;
        margin: 0 auto;
        justify-content: center;
    }
    
    .card {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 40px 20px;
        width: 400px; 
        min-height: 500px; 
        border-radius: 20px;
        background: #131B26;
        transition: transform 0.3s ease 0.1s;
    }

    .card:hover{
        transform: scale(1.05);
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.2);
    }

    .img {
        width: 200px;
        height: auto;
    }

    .content {
        max-width: 100%;
        flex: 1; 
        display: flex;
        flex-direction: column;
        padding: 0 10px; 
    }

    .title {
        font-size: 44px;
        color: white;
        margin: 0 0 30px 0;
        font-weight: 500;
    }

    .details {
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .text {
        font-size: 18px;
        color: #8892b0;
        margin: 0;
        word-wrap: break-word; 
    }

    @media (max-width: 1750px) {
        .container {
            padding: 20px;
        }
    }

    @media (max-width: 1000px) {
        .card {
            width: 350px;
            min-height: 450px;
            padding: 30px 15px; 
        }
        
        .title {
            font-size: 32px;
            margin: 0 0 20px 0; 
        }

        .text {
            font-size: 16px; 
        }

        .img {
            width: 150px; 
        }
    }

    @media (max-width: 400px) {
        .card {
            width: 300px;
            min-height: auto; 
            padding: 25px 12px; 
        }
        
        .title {
            font-size: 28px;
            margin: 0 0 15px 0;
        }

        .text {
            font-size: 15px;
            line-height: 1.4; 
        }

        .container {
            gap: 30px; 
            padding: 15px;
        }
    }
</style>